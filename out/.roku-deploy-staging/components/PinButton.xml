<component name="CustomButton" extends="Group">

       <interface>
               <field id="text" type="string" alwaysNotify ="true" onChange="onTextChange" />
               <field id="width" type="integer" alwaysNotify="true" onChange="onWidthChange" />
               <field id="height" type="integer" alwaysNotify="true" onChange="onHeightChange" />
       </interface>

       <script type="text/brightscript" uri ="pkg:/components/PinButton.brs" />
       <children>

         <Rectangle 
           id="background_3" 
           color="#414041" 
           width="320" 
           height="70" 
           />

         <Label 
           id="text" 
           width="320" 
           height="70" 
           horizAlign="center" 
           vertAlign="center"
           />

       </children>
</component>